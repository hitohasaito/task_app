<h1>ユーザー詳細</h1>

<p>名前:<%= @user.name %></p>
<p>メールアドレス:<%= @user.email %></p>
<p>タスク一覧</p>
<table border="1" align="center">
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
  </tr>
  <% @user.tasks.each do |t| %>
  <tr>
    <td><%= t.task_name %></td>
    <td><%= t.task_body %></td>
  </tr>
  <% end %>
</table>
<p><%= link_to "編集する", edit_admin_user_path(@user.id) %></p>
<p><%= link_to "削除する", admin_user_path(@user.id), method: :delete, data: {confirm: "本当に削除しますか？"} %></p>
