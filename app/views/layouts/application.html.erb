<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
    	<div class="container-fluid">
    		<div class="navbar-header">
    			<button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbarEexample8">
    				<span class="sr-only">Toggle navigation</span>
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
    			</button>
    			<a class="navbar-brand" href="#">
    				タスク管理
    			</a>
    		</div>

    		<div class="collapse navbar-collapse" id="navbarEexample8">
          <ul class="nav navbar-nav">
          <% if logged_in? %>
    				<li><%= link_to "新規登録", new_task_path %></li>
            <li><%= link_to "一覧", tasks_path %></li>
            <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
            <p class="navbar-text">ようこそ<%= current_user.name %>さん。</p>
          <% else %>
            <li><%= link_to "ログイン",new_session_path %></li>
            <li><%= link_to "ユーザー登録", new_user_path %></li>
          <% end %>
          </ul>
    		</div>
    	</div>
    </nav>
    <%= yield %>
  </body>
</html>
