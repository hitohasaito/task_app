<h1>詳細</h1>
  <table border="1" align="center">
	  <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>終了期限</th>
      <th>作成日時</th>
      <th>ラベル一覧</th>
    </tr>
		<tr>
      <td><%= @task.task_name %></td>
      <td><%= @task.task_body %></td>
      <td><%= @task.task_limit %></td>
      <td><%= @task.created_at %></td>
      <td>
        <% @task.labels.each do |label| %>
          <%= label.label_name %>
        <% end %>
      </td>
    </tr>
  </table>
  <br>
<button type="button" class="btn btn-default btn-xs"><%= link_to "編集", edit_task_path(@task.id) %></button>
